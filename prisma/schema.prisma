generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
}

model Blog {
  id          String    @id
  title       String
  slug        String    @unique
  content     String
  coverImage  String?
  authorId    String?
  likes       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime
  description String?
  reads       Int       @default(0)
  BlogTag     BlogTag[]
  Comment     Comment[]
}

model BlogTag {
  id     String @id
  blogId String
  tagId  String
  Blog   Blog   @relation(fields: [blogId], references: [id], onDelete: Cascade)
  Tag    Tag    @relation(fields: [tagId], references: [id])
}

model Comment {
  id        String   @id
  content   String
  blogId    String
  userId    String
  createdAt DateTime @default(now())
  Blog      Blog     @relation(fields: [blogId], references: [id])
}

model Contact {
  id        String   @id
  name      String?
  email     String
  message   String?
  createdAt DateTime @default(now())
}

model Newsletter {
  id                     String    @id
  email                  String    @unique
  name                   String?
  subscribed_at          DateTime  @default(now())
  is_active              Boolean   @default(true)
  subscription_type      String?
  last_sent_email        DateTime?
  unsubscribed_at        DateTime?
  newsletter_preferences String?
  sent_emails_count      Int       @default(0)

  @@index([email])
}

model Tag {
  id      String    @id
  name    String    @unique
  BlogTag BlogTag[]
}
